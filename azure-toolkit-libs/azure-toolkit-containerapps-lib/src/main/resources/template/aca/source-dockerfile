# Dockerfile.template

# Build-time variable (can be passed using --build-arg)
ARG JAVA_VERSION=${JAVA_VERSION:-11}

# Step 1: Use a Maven image to build the application
FROM mcr.microsoft.com/openjdk/jdk:${JAVA_VERSION}-mariner AS builder

# Install Maven in the builder image
RUN tdnf install maven3 -y

# Set the working directory in the builder image
WORKDIR /app

# Copy the pom.xml and any other Maven configuration files first
COPY pom.xml ./

# Copy the entire source code into the container
COPY src ./src

# Build the application (adjust for the exact path to the JAR)
RUN mvn clean package -DskipTests

# Step 2: Use a minimal JDK runtime for the final image
FROM mcr.microsoft.com/openjdk/jdk:${JAVA_VERSION}-mariner

# Set the working directory in the runtime image
WORKDIR /app

# Copy the JAR file from the builder image
COPY --from=builder /app/target/*.jar app.jar

# Set the entrypoint to run the Spring Boot application
ENTRYPOINT ["java", "-jar", "app.jar"]
